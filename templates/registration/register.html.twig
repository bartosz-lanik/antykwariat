{% extends 'base.html.twig' %}

{% block title %}{{ site_name }} - {{ t('app.titleRegister', {}, 'app')|trans }}{% endblock %}

{% block body %}
        <div class="d-flex container flex-fill align-items-center">
            {% for flashError in app.flashes('verify_email_error') %}
                <div class="alert alert-danger" role="alert">{{ flashError }}</div>
            {% endfor %}

            {{ form_start(registrationForm, {'attr': {'class': 'form-signin'}}) }}
                {{ form_row(registrationForm.username) }}
                {{ form_row(registrationForm.plainPassword) }}

                <button type="submit" class="btn btn-lg btn-primary btn-block mt-2">{{ t('app.layoutRegisterButtonRegister', {}, 'app')|trans }}</button>
                <a href="{{ path('app_login') }}">Login</a>
            {{ form_end(registrationForm) }}
        </div>
{% endblock %}